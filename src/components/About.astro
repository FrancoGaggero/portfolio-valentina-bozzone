<section id="about" class="py-20 px-6 bg-gray-50">
  <div class="container mx-auto max-w-6xl">
    
    <!-- Two Column Layout: Content Left, Image Right -->
    <div class="grid lg:grid-cols-2 gap-12 items-start mb-16">
      
      <!-- Left Column: About & Education -->
      <div class="space-y-16">
        
        <!-- Simple About -->
        <div>
          <h2 class="text-4xl md:text-5xl font-display font-light mb-8 text-black ">
            Sobre Mí
          </h2>
          
          <p class="text-lg md:text-xl text-gray-600 leading-relaxed mb-12">
            Soy Productora de Moda, Community Manager y estudiante en Diseño y Comunicación.
            Tengo una mirada estratégica, estetica y resolutiva que me permite crear contenido visual que conecta marcas con sus audiencias de manera auténtica.
          </p>
        </div>
        
        <!-- Education & Certifications -->
        <div>
          <div class="mb-12">
            <h3 class="text-2xl md:text-3xl font-display font-light text-black mb-4">
              Formación & Certificaciones
            </h3>
            <p class="text-gray-600">
              Educación continua en las mejores instituciones
            </p>
          </div>
          
          <div class="space-y-6">
        
            <!-- Universidad de Palermo -->
            <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100 hover:shadow-md transition-shadow duration-300">
              <div class="flex items-center space-x-4 mb-4">
                <div class="w-12 h-12 bg-black rounded-lg flex items-center justify-center">
                  <span class="text-white font-bold text-sm">UP</span>
                </div>
                <div>
                  <h4 class="text-lg font-medium text-black">Universidad de Palermo</h4>
                  <p class="text-sm text-gray-500">Educación Superior</p>
                </div>
              </div>
              <p class="text-gray-600 text-sm leading-relaxed">
                Formación en Producción de Moda y Licenciatura en Gestión de proyectos de Diseño y Comunicación.
              </p>
            </div>

            <!-- Coder House -->
            <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100 hover:shadow-md transition-shadow duration-300">
              <div class="flex items-center space-x-4 mb-4">
                <div class="w-12 h-12 bg-black rounded-lg flex items-center justify-center">
                  <span class="text-white font-bold text-xs">CODER</span>
                </div>
                <div>
                  <h4 class="text-lg font-medium text-black">Coder House</h4>
                  <p class="text-sm text-gray-500">Certificaciones Digitales</p>
                </div>
              </div>
              <p class="text-gray-600 text-sm leading-relaxed">
                Marketing Digital: Community Management. <br>
                Photoshop e Illustrator.
              </p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Right Column: Image -->
      <div class="lg:sticky lg:top-8">
        <div class="relative">
          <div class="aspect-[3/4] rounded-2xl overflow-hidden shadow-xl">
            <img 
              src="/images/ny.jpeg" 
              alt="Valentina Bozzone" 
              class="w-full h-full object-cover"
            />
          </div>
          <!-- Elegant overlay gradient -->
          <div class="absolute inset-0 bg-gradient-to-t from-black/20 via-transparent to-transparent rounded-2xl"></div>
        </div>
      </div>
    </div>
    
    <!-- Skills & Tools -->
    <div class="mb-16">
      <div class="text-center mb-12">
        <h3 class="text-2xl md:text-3xl font-display font-light text-black mb-4">
          Herramientas & Plataformas
        </h3>
        <p class="text-gray-600">
          Tecnologías que uso para crear experiencias excepcionales
        </p>
      </div>
      
      <div class="flex flex-wrap justify-center gap-6 max-w-4xl mx-auto">
        
        <!-- Creative Tools -->
        <div class="flex items-center space-x-3 bg-white px-6 py-3 rounded-full shadow-sm border border-gray-100">
          <div class="w-8 h-8 bg-gradient-to-br from-blue-600 to-purple-600 rounded-lg flex items-center justify-center">
            <span class="text-white text-xs font-bold">Ps</span>
          </div>
          <span class="text-gray-700 font-medium">Photoshop</span>
        </div>

        <div class="flex items-center space-x-3 bg-white px-6 py-3 rounded-full shadow-sm border border-gray-100">
          <div class="w-8 h-8 bg-gradient-to-br from-orange-500 to-pink-500 rounded-lg flex items-center justify-center">
            <span class="text-white text-xs font-bold">Ai</span>
          </div>
          <span class="text-gray-700 font-medium">Illustrator</span>
        </div>

        <!-- Social Media -->
        <div class="flex items-center space-x-3 bg-white px-6 py-3 rounded-full shadow-sm border border-gray-100">
          <div class="w-8 h-8 bg-gradient-to-br from-pink-500 to-rose-600 rounded-lg flex items-center justify-center">
            <span class="text-white text-xs">📷</span>
          </div>
          <span class="text-gray-700 font-medium">Instagram</span>
        </div>

        <div class="flex items-center space-x-3 bg-white px-6 py-3 rounded-full shadow-sm border border-gray-100">
          <div class="w-8 h-8 bg-gradient-to-br from-purple-500 to-blue-500 rounded-lg flex items-center justify-center">
            <span class="text-white text-xs">🎬</span>
          </div>
          <span class="text-gray-700 font-medium">CapCut</span>
        </div>

        <div class="flex items-center space-x-3 bg-white px-6 py-3 rounded-full shadow-sm border border-gray-100">
          <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center">
            <span class="text-white text-xs font-bold">TR</span>
          </div>
          <span class="text-gray-700 font-medium">Trello</span>
        </div>

        <div class="flex items-center space-x-3 bg-white px-6 py-3 rounded-full shadow-sm border border-gray-100">
          <div class="w-8 h-8 bg-black rounded-lg flex items-center justify-center">
            <span class="text-white text-xs font-bold">TT</span>
          </div>
          <span class="text-gray-700 font-medium">TikTok</span>
        </div>
        
        <div class="flex items-center space-x-3 bg-white px-6 py-3 rounded-full shadow-sm border border-gray-100">
          <div class="w-8 h-8 bg-gradient-to-br from-orange-500 to-red-500 rounded-lg flex items-center justify-center">
            <span class="text-white text-xs font-bold">MC</span>
          </div>
          <span class="text-gray-700 font-medium">Metricool</span>
        </div>

        <div class="flex items-center space-x-3 bg-white px-6 py-3 rounded-full shadow-sm border border-gray-100">
          <div class="w-8 h-8 bg-gradient-to-br from-purple-500 to-pink-500 rounded-lg flex items-center justify-center">
            <span class="text-white text-xs">🎨</span>
          </div>
          <span class="text-gray-700 font-medium">Canva Pro</span>
        </div>
      </div>
    </div>
    
    <!-- Three Simple Services -->
    <div class="grid md:grid-cols-3 gap-8">
      <div class="text-center p-6 hover:bg-white transition-colors duration-300">
        <div class="w-16 h-16 bg-black rounded-full flex items-center justify-center mx-auto mb-4">
          <span class="text-white text-2xl">📸</span>
        </div>
        <h3 class="text-lg font-medium text-black mb-2">Producción</h3>
        <p class="text-gray-600 text-sm">Dirección creativa y producción de contenido visual</p>
      </div>
      
      <div class="text-center p-6 hover:bg-white transition-colors duration-300">
        <div class="w-16 h-16 bg-black rounded-full flex items-center justify-center mx-auto mb-4">
          <span class="text-white text-2xl">📱</span>
        </div>
        <h3 class="text-lg font-medium text-black mb-2">Community</h3>
        <p class="text-gray-600 text-sm">Gestión estratégica de redes sociales</p>
      </div>
      
      <div class="text-center p-6 hover:bg-white transition-colors duration-300">
        <div class="w-16 h-16 bg-black rounded-full flex items-center justify-center mx-auto mb-4">
          <span class="text-white text-2xl">🎨</span>
        </div>
        <h3 class="text-lg font-medium text-black mb-2">Branding</h3>
        <p class="text-gray-600 text-sm">Desarrollo de identidad visual</p>
      </div>
    </div>
  </div>
</section>
