  <div class="container mx-auto max-w-4xl relative z-10">
    <div class="text-center">
      
      <!-- Main Heading -->
      <h1 class="text-6xl md:text-8xl lg:text-9xl font-display font-light mb-8 leading-tight tracking-tight">
        <span class="text-black">Valentina</span>
        <br>
        <span class="text-gray-500">Bozzone</span>
      </h1>
      
      <!-- Simple Subtitle -->
      <p class="text-lg md:text-xl text-gray-500 mb-12 max-w-md mx-auto font-light">
        Productora de Moda y Community Manager
      </p>
      
      <!-- Single CTA -->
